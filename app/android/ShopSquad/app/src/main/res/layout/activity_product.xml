<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashleyyiu.shopsquad.Product">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:nestedScrollingEnabled="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="221dp"
                android:layout_marginEnd="221dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/productName"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="left|center_horizontal"
                android:textStyle="bold"
                android:fontFamily="san-serif-light"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/reviews"
                android:layout_row="3"
                android:layout_column="0"
                android:elegantTextHeight="true"
                android:fontFamily="san-serif-light"
                android:layout_gravity="left" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/reviewBox"
                android:layout_gravity="center_horizontal"
                android:background="#e9e3e3"
                android:capitalize="sentences"
                android:clickable="false"
                android:contentDescription="Leave a review here!"
                android:fontFamily="san-serif-light"
                android:contextClickable="false"
                android:autoText="false" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Submit a review"
                android:id="@+id/submitButton"
                android:layout_gravity="right"
                android:textStyle="normal"
                android:capitalize="none"
                android:textColor="#ffffff"
                android:background="#8bd0d9"
                android:allowUndo="false" />
        </LinearLayout>

    </GridLayout>
    </RelativeLayout>
</ScrollView>
